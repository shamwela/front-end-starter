#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Check Prettier standards
npm run check-format ||
(
  echo 'Prettier check failed. Run `npm run format`, stage changes and try committing again.';
  false;
)

# Check ESLint standards
npm run check-lint ||
(
  echo 'ESLint check failed. Make the required changes listed above, stage changes and try committing again.'
  false; 
)

# Check tsconfig standards
npm run check-types ||
(
  echo 'Type check failed. Make the required changes listed above.'
  false;
)